# Environment Variables for Docker Compose
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the .env file to git!

# User and Group IDs (run `id` to find yours)
PUID=1000
PGID=1000

# Timezone (list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=America/Chicago

# Application data storage path
# This is where container configs and databases are stored
APPDATA_PATH=/var/lib/containers/appdata

# =============================================================================
# MEDIA STACK (media.yml)
# =============================================================================

# Plex Configuration
PLEX_CLAIM_TOKEN=claim-XXXXXXXXXXXXXXXXXXXX
# Get your claim token from: https://www.plex.tv/claim/
PLEX_API_KEY=your-plex-api-key

# Jellyfin Configuration
JELLYFIN_PUBLIC_URL=https://jellyfin.yourdomain.com
JELLYFIN_API_KEY=your-jellyfin-api-key

# Komga Configuration (Comics/Manga/Ebook Server)
# Directories to exclude when scanning libraries
KOMGA_LIBRARIES_SCAN_DIRECTORY_EXCLUSIONS=#recycle,@eaDir

# =============================================================================
# WEB STACK (web.yml)
# =============================================================================

# Jellyseerr Database Configuration
JELLYSEERR_DB_TYPE=postgres
JELLYSEERR_DB_HOST=jellyseerr-postgres
JELLYSEERR_DB_PORT=5432
JELLYSEERR_DB_USER=jellyseerr
JELLYSEERR_DB_PASS=ChangeMeToASecurePassword
JELLYSEERR_DB_NAME=jellyseerr
JELLYSEERR_DB_LOG_QUERIES=false
JELLYSEERR_DB_USE_SSL=false

# Jellystat Database Configuration
JELLYSTAT_DB_USER=jellystat
JELLYSTAT_DB_PASS=ChangeMeToASecurePassword
JELLYSTAT_DB_NAME=jellystat
JELLYSTAT_JWT_SECRET=ChangeMeToARandomSecretKey

# Cloudflare DDNS Configuration
CF_USER=your-cloudflare-email@example.com
CF_APITOKEN=your-cloudflare-api-token
CF_ZONES=yourdomain.com
CF_HOSTS=dns.yourdomain.com;plex.yourdomain.com;jellyfin.yourdomain.com
# Optional: Only needed if using API key instead of token
# CF_APIKEY=your-cloudflare-api-key
# CF_APITOKEN_ZONE=your-zone-specific-token

# =============================================================================
# CLOUD STACK (cloud.yml)
# =============================================================================

# Nextcloud Configuration
NEXTCLOUD_DB_PASSWORD=ChangeMeToASecurePassword
NEXTCLOUD_DOMAIN=cloud.yourdomain.com

# Collabora Online (Office document editing)
COLLABORA_PASSWORD=ChangeMeToASecurePassword

# Nextcloud HARP (AppAPI)
HP_SHARED_KEY=ChangeMeToARandomSecretKey
HP_EXAPPS_ADDRESS=http://minipc.lan:8782

# =============================================================================
# NETWORK CONFIGURATION (for reference)
# =============================================================================
# Local network: 192.168.7.0/24
# Homelab server: minipc.lan
# WireGuard tunnel: 10.253.1.2/24
# NFS server: unraid.lan
# Media NFS mounts (configured via homelab-setup):
#   /mnt/nas-media - Media library (ro)
#   /mnt/nas-nextcloud - Nextcloud data (rw)
