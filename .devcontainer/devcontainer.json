{
  "name": "Go",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  // Mount SSH keys and Git config
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,readonly,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,readonly,type=bind",
    "source=${localEnv:HOME}/.zshrc,target=/home/vscode/.zshrc,readonly,type=bind",
    "source=${localEnv:HOME}/.bashrc,target=/home/vscode/.bashrc,readonly,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go"
      ],
      "settings": {
        "go.useLanguageServer": true
      }
    }
  },
  "postCreateCommand": "cd homelab-setup && go mod download && go install golang.org/x/tools/gopls@latest"
}
